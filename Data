#---PackagesToReadWebpage---
import requests
from bs4 import BeautifulSoup

# make a get request to the KLM reviews overview page
url = 'https://www.airlinequality.com/airline-reviews/klm-royal-dutch-airlines/page/1/'
res = requests.get(url)
soup = BeautifulSoup(res.text, "html.parser")

# return the href attribute in the <a> tag nested within the second product class element
for link in soup.find_all("a"): 
    print(link.attrs["href"])
    
    

# list of all reviews on the overview page
reviews = soup.find_all(class_="body")
airlinereview_urls = []

for review in reviews: 
    airlinereview_url = review.find("a").attrs["href"]
    airlinereview_urls.append(airlinereview_url)
    
# print the first five urls
print(airlinereview_urls[0:5])


#full URL
counter = 1
full_url = base_url + "page-" + str(counter) + ".html" 
print(full_url)

#all pages
base_url = "https://www.airlinequality.com/airline-reviews/klm-royal-dutch-airlines/"
page_urls = []

for counter in range(1, 122):
    full_url = base_url + "page-" + str(counter) + ".html" 
    page_urls.append(full_url)
